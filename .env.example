# Example environment variables for ViolentUTF API
# Copy this file to .env and update with your values

# Application settings
APP_NAME=ViolentUTF-API
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_VERSION=v1
API_PREFIX=/api

# Security
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY=your-api-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (if needed)
DATABASE_URL=sqlite:///./violentutf.db
# DATABASE_URL=postgresql://user:password@localhost/violentutf  # pragma: allowlist secret

# Redis (for caching/queuing)
REDIS_URL=redis://localhost:6379/0

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/hour

# Model Configuration
MODEL_PATH=./model_artifacts/
MODEL_NAME=violentutf-base
MODEL_VERSION=1.0.0
MAX_MODEL_LENGTH=2048
MODEL_TEMPERATURE=0.7

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
USE_GPU=false

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# External Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_TOKEN=

# Feature Flags
ENABLE_ATTACK_LOGGING=true
ENABLE_DEFENSE_MODE=true
ENABLE_SAFETY_FILTERS=true

# Storage
UPLOAD_PATH=./uploads/
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Testing
TEST_MODE=false
TEST_API_KEY=test-key-do-not-use-in-production
