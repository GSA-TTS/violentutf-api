# Claude Code SDK Configuration
ANTHROPIC_API_KEY=your_api_key_here

# Optional: Claude Code CLI path (if not in PATH)
CLAUDE_CODE_CLI_PATH=/usr/local/bin/claude

# Optional: Custom system prompts path
SYSTEM_PROMPTS_PATH=./config/system_prompts/

# Optional: Analysis configuration
MAX_TURNS=25
ANALYSIS_TIMEOUT=300
ENABLE_STREAMING=true

# Optional: Reporting configuration
REPORTS_OUTPUT_DIR=./reports/claude-code-audit/
ENABLE_HTML_REPORTS=true
ENABLE_SARIF_OUTPUT=true
