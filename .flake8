[flake8]
max-line-length = 120
extend-ignore = E203, W503, E501, F401, F541, E226
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    build,
    dist,
    .eggs,
    *.egg,
    .pytest_cache,
    .mypy_cache,
    .tox,
    migrations,
    app_data,
    violentutf_logs,
    security,
    .github,
    scripts
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811,ANN101,ANN401,D202
max-complexity = 10
statistics = True
count = True
